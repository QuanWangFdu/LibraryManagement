@model LibraryManagement.Models.Author

<h2>Delete Author</h2>

<form asp-action="Delete" method="post">
    <div class="form-group">
        <label for="authorId">Author ID</label>
        <input type="number" id="authorId" name="id" class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger">Delete Author</button>
</form>

@if (Model != null)
{
    <div>
        <h4>ID</h4>
        <p>@Model.AuthorId</p>
    </div>
    <div>
        <h4>Name</h4>
        <p>@Model.Name</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="AuthorId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Author")" class="btn btn-secondary">Back to List</a>
    </form>
}
