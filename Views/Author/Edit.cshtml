@model LibraryManagement.Models.Author

<h2>Edit Author</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="authorId">Author ID</label>
        <input type="number" id="authorId" name="id" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Edit Author</button>
</form>

@if (Model != null)
{
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="AuthorId" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <textarea asp-for="Name" class="form-control"></textarea>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}
