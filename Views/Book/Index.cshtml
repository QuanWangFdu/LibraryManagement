@model List<LibraryManagement.ViewModels.BookViewModel>

<h1>Books</h1>
<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Create Book</a>
<a href="@Url.Action("Details", "Book")" class="btn btn-info">Get Book Details</a>
<a href="@Url.Action("EditForm", "Book")" class="btn btn-warning">Edit Book</a>
<a href="@Url.Action("DeleteForm", "Book")" class="btn btn-danger">Delete Book</a>

<table class="table">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Author Name</th>
            <th>Branch Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.AuthorName</td>
                <td>@book.BranchName</td>
            </tr>
        }
    </tbody>
</table>