@model LibraryManagement.ViewModels.BookViewModel

<h2>Get Book Details</h2>

<form asp-action="Details" method="post">
    <div class="form-group">
        <label for="bookId">Book ID</label>
        <input type="number" id="bookId" name="id" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info">Get Details</button>
</form>

@if (Model != null)
{
    <div>
        <h4>ID</h4>
        <p>@Model.BookId</p>
    </div>
    <div>
        <h4>Title</h4>
        <p>@Model.Title</p>
    </div>
    <div>
        <h4>Author Name</h4>
        <p>@Model.AuthorName</p>
    </div>
    <div>
        <h4>Branch Name</h4>
        <p>@Model.BranchName</p>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
</div>
